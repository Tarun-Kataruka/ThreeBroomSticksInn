pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = credentials('dockerhub-creds')
        DOCKERHUB_TOKEN = credentials('dockerhub-creds')      
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Tarun-Kataruka/ThreeBroomSticksInn.git'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'chmod +x ./deploy.sh && ./deploy.sh'
            }
        }
    }
}
